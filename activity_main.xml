<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvSaude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="4dp"
        android:text="Saude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvMente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Mente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMoral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="40dp"
        android:text="Moral"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgSaude"
        android:layout_width="113dp"
        android:layout_height="96dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/marinho" />

    <ImageView
        android:id="@+id/imgMente"
        android:layout_width="113dp"
        android:layout_height="96dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/imgMoral"
        app:layout_constraintStart_toEndOf="@+id/imgSaude"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/marinho" />

    <ImageView
        android:id="@+id/imgMoral"
        android:layout_width="113dp"
        android:layout_height="96dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/marinho" />

    <ImageView
        android:id="@+id/imgFase"
        android:layout_width="160dp"
        android:layout_height="161dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMente"
        app:layout_constraintVertical_bias="0.037"
        app:srcCompat="@drawable/foda" />

    <TextView
        android:id="@+id/txtFala"
        android:layout_width="350dp"
        android:layout_height="99dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla convallis nunc eros, efficitur tincidunt tortor tristique at. Vestibulum viverra aliquet mauris, et viverra nulla blandit eget. Vestibulum interdum ipsum in volutpat consequat. Etiam auctor, erat ac euismod tempor, nibh quam laoreet diam, at volutpat lectus mauris eu metus. Donec nisi est, aliquam eget placerat in, sodales sit amet erat. Nunc quis dui in sapien malesuada ornare a lobortis mi. Vivamus tempor, nisi at luctus tempus, risus dui vehicula felis, eu mattis nibh nisl quis ipsum. Nullam quam nisi, molestie eget tempor ac, cursus id augue. Sed quis ante at est egestas vestibulum. Donec porttitor malesuada sapien ac luctus. Nam iaculis fermentum nibh quis interdum. Nam feugiat in ante facilisis pharetra. Suspendisse ultricies consequat metus ut aliquam. Sed sodales consectetur mi, a feugiat nulla tincidunt et."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.698" />

    <Button
        android:id="@+id/btnOpcao1"
        android:layout_width="176dp"
        android:layout_height="121dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnOpcao2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnOpcao2"
        android:layout_width="178dp"
        android:layout_height="121dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>